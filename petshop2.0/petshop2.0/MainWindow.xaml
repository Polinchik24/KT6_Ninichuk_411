<Window x:Class="petshop2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:petshop2._0"
        mc:Ignorable="d"
        Title="petshop" Height="650" Width="1000"
        MinHeight="650" MinWidth="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF76E383">
            <Label Content="Магазин для животных"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="28">
            </Label>
            <Image Source="/Resources/logo.png" HorizontalAlignment="Left"
                   Margin="10"/>
        </Grid>
        <Frame Grid.Row="1" x:Name="MainFrame"
               NavigationUIVisibility="Hidden">
        </Frame>
        
    </Grid>
</Window>
