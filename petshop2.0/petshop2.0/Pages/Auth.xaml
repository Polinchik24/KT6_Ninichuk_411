<Page x:Class="petshop2._0.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:petshop2._0.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid Background="White">
        <StackPanel>
             <Label Content="Логин:" FontSize="28"
               HorizontalAlignment="Center" VerticalAlignment="Center">
             </Label>
            <TextBox Height="50" Width="300" x:Name="login"></TextBox>
             <Label Content="Пароль:" FontSize="28"
               HorizontalAlignment="Center" VerticalAlignment="Center">
             </Label>
            <PasswordBox Height="50" Width="300" x:Name="password"></PasswordBox>
            <Button  Height="50" Width="300"
                 Margin="250,20" x:Name="button_1"
                 Content="Войти" Click="button_1_Click"
                 Background="#FF498C51" RenderTransformOrigin="0.5,1.34"/>
            <Button  Height="50" Width="300"
                 Margin="20" x:Name="button_3"
                 Content="Гость" Click="button_3_Click"
                 Background="#FF498C51">
            </Button>
        </StackPanel>
        
        
    </Grid>
</Page>
